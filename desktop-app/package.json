{
  "name": "pharma-desktop",
  "version": "1.0.0",
  "description": "康源医药销售管理系统 - 桌面版",
  "author": "Pharma Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --arm64"
  },
  "build": {
    "appId": "com.pharma.desktop",
    "productName": "康源医药管理系统",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "backend/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/pharma-backend.exe",
        "to": "backend/pharma-backend.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}